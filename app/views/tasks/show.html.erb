<h2>task detail</h2>
<div class="waku">
  <table class="table table-bordered" style="table-layout: fixed;">
    <tbody>
    <tr>
      <th style="width:20%;">title</th>
      <td style="width:80%;"><%= @task.title %></td>
    </tr>
    <tr>
      <th>note</th>
      <td><%= @task.note %></td>
    </tr>
    <tr>
      <th>deadline</th>
      <td><%= deadline_format(@task.deadline) %></td>
    </tr>
    <tbody>
  </table>
  <div class="row well" style="margin:20px 0 0 0">
    <div class="col-sm-12">
      <%= link_to "back", tasks_path, class:"btn btn-default", style:"width:150px;display:block;margin:auto" %>
    </div>
  </div>
</div>
